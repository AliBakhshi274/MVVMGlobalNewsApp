<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_noInternetConnection"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:layout_marginTop="100dp"
        android:alpha="0.95"
        android:contentDescription="No Internet Connection"
        android:src="@drawable/no_internet"
        app:layout_constraintBottom_toTopOf="@id/textView_noInternetConnection"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_noInternetConnection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="90dp"
        android:alpha="0.9"
        android:gravity="center"
        android:padding="10dp"
        android:text="No Internet Connection"
        android:textColor="#75C1FD"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/btnTryAgain"
        app:layout_constraintTop_toBottomOf="@id/imageView_noInternetConnection" />

    <Button
        android:id="@+id/btnTryAgain"
        android:layout_width="280dp"
        android:layout_height="65dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="80dp"
        android:alpha="0.9"
        android:backgroundTint="#47AAFA"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Try Again"
        android:textSize="25sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>

































